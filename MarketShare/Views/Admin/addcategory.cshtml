
@{
    ViewBag.Title = "addcategory";
}


<form method="post" id="addcatform">
    <div class="container">
        <div class="row">
           
            <div class="col-sm-4 col-sm-offset-4" style="background-color:gainsboro">
                <h2 class="text-center text-danger">Add Category</h2>
                <div class="form-group">
                    <label for="inputcat">Category</label>
                    <select class="form-control" name="category">
                        <option>Men</option>
                        <option>Women</option>
                        <option>kids</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputscat">Sub Category</label>
                    <select class="form-control" name="subcategory">
                        <option>Clothes</option>
                        <option>Shoes</option>
                        <option>Watches</option>
                        <option>Sunglass</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputtype">Type</label>
                    <input type="text" name="type" class="form-control" />
                </div>
                <input type="submit" value="Add" class="btn btn-success" />
                <p>@ViewBag.msg</p>
            </div>
        </div>
    </div>
</form>