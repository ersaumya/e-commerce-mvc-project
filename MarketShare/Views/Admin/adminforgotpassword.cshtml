
@{
    ViewBag.Title = "adminforgotpassword";
}


<form method="post" id="adminforgotpasswordform">
    <div class="container">
        <div class="row">
            
            <div class="col-sm-4 col-sm-offset-4">
                <h2 class="text-center text-danger">Forgot Password</h2>
                <div class="form-group">
                    <label for="inputadminid">Admin ID</label>
                    <input type="text" class="form-control" name="adminid" id="inputadminid" placeholder="Admin Id" />
                </div>
                <div class="form-group">
                    <label for="inputemailid">Email Id</label>
                    <input type="text" class="form-control" name="emailid" id="inputemailid" placeholder="Email Id" />
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
                <div class="form-group">
                    <a href="~/Admin/adminlogin">Back to Login!</a>
                </div>
                <h4>@ViewBag.msg</h4>
            </div>
        </div>
    </div>

</form>

