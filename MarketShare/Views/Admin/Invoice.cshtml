
@{
    Layout = null;
}

<!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Invoice</title>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <link href="~/my validation/bootstrap.min.css" rel="stylesheet"  />
        <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
        <style>
            .h-divider {
                margin-top: 5px;
                margin-bottom: 5px;
                height: 1px;
                width: 100%;
                border-top: 1px solid gray;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="text-right">
                        <input type="button" value="Print" class="btn-btn-block hidden-print" onclick="window.print()" />
                    </div>
                    <div class="text-center"><h4><b>Retail Invoices/Bill</b></h4></div>
                    <div class="row">
                        <div class="col-xs-offset-10">
                            <table border="1" style="border-style:dotted">
                                <tr><td><b>Invoice No:#636975</b></td></tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <h5><b>Sold By : </b><strong>Online-Best Shop Pvt.Ltd</strong></h5><br />
                            <p><i>WareHouse Address:Online_Best Shop Warehouse,Door No N1/456,Hotel Crown Road,Nayapalli,Bhubaneswar,Odisha-754202</i></p>
                            <div class="h-divider"></div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-xs-3">
                            <label><b>Order Id</b>:@ViewBag.orderid</label><br />
                            <label><b>Order Date:@ViewBag.orderdate</b></label><br />
                            <label><b>Invoice Date:</b></label><br />
                            <label><b>VAT:</b>#</label><br />
                            <label><b>Service Tax:</b>#</label>

                        </div>
                        <div class="col-xs-3">
                            <label><b>Billing Address</b></label>
                            <address>
                                <label>@Html.Raw(ViewBag.shippingaddress)</label><br />

                            </address>
                        </div>
                        <div class="col-xs-3">
                            <label><b>Shipping Address</b></label>
                            <address>
                                <label>@Html.Raw(ViewBag.shippingaddress)</label><br />

                            </address>
                        </div>
                        <div class="col-xs-3">
                            <div class="text-center">
                                <i>
                                    *Keep this invoice and<br />
                                    manufacturer box for<br />
                                    warrenty purposes.
                                </i>
                            </div>
                        </div>

                    </div>
                    <div class="h-divider"></div>


                    <div class="row">

                        <div class="col-xs-6">
                            <div class="col-xs-4">
                                <label><b>Product</b></label>
                            </div>
                            <div class="col-xs-8">
                                <label><b>Title</b></label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="col-xs-2"><label><b>Qty</b></label></div>
                            <div class="col-xs-3"><label><b>Price(Rs.)</b></label></div>
                            <div class="col-xs-2"><label><b>Tax(%)</b></label></div>
                            <div class="col-xs-2"><label><b>Tax(Rs)</b></label></div>
                            <div class="col-xs-3"><label><b>Total(Rs)</b></label></div>
                        </div>

                    </div>
                    <div class="h-divider"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="col-xs-4">
                        @foreach (var k in Model)
                          {
                             <label>Product Name:@k.productname</label><br />
                             <label>Product No:@k.productid</label>
                           }
                         </div>
                            <div class="col-xs-8">
                                <label>Product Name:#</label><br />
                                <label>Product Short Descp:#</label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="col-xs-2">
                                <label class="text-center">1</label>
                            </div>
                            <div class="col-xs-3"><label>Rs 0.00</label></div>
                            <div class="col-xs-2">
                                <label class="text-center">5.00%</label><br />
                                <label class="text-center">CST</label>
                            </div>
                            <div class="col-xs-2">
                                <label class="text-center">Rs 0.00</label>
                            </div>
                            <div class="col-xs-3">
                                <label class="text-center">Rs 0.00</label><br />

                            </div>
                        </div>
                    </div>
                    <div class="h-divider"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="col-xs-offset-10"><label><b>Total</b></label></div>
                        </div>

                        <div class="col-sm-6">
                            <div class="col-xs-2"><label><b>1</b></label></div>
                            <div class="col-xs-3"><label><b>Rs 0.00</b></label></div>
                            <div class="col-xs-2"></div>
                            <div class="col-xs-2"><label><b>Rs 0.00</b></label></div>
                            <div class="col-xs-3"><label><b>Rs 0.00</b></label></div>
                        </div>
                    </div>
                    <div class="h-divider"></div>
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-8"><h4><b>Grand Total</b></h4></div>
                        <div class="col-xs-1"><h4 class="text-right"><strong>Rs 0.00</strong></h4></div>
                    </div>
                    <div class="h-divider"></div>
                    <div class="text-center"><i>*This is a computer generated invoice.</i></div>
                    <div class="text-right"><h5><b>Online-Best Shop Pvt.Ltd</b></h5></div><br /><br /><br />
                    <div class="text-right"><h5><b>(Authorised Signatory)</b></h5></div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <div class="container">
                <div class="row">
                    
                        <div class="col-xs-offset-8">
                            <h4>Ordered Through: <b>Online-Best Shop</b></h4>
                        </div>

                    
                </div>
                <div class="row">
                    <div class="col-xs-offset-7"><label>Online- best Shop Customer Care:9238591744</label><b>&nbsp;||&nbsp; www.online-best.com</b></div>
                </div><br />
                <div class="row">
                    <p><b>Return Policy:</b><i>At Online-Best Shop we try to delivery perfectly each and every time.But in the off-chance that you need to return the item.Please do so with the <b>Original Brand box/price tag,original packaging and invoice</b>without which it will be really difficult for us to act on your request.Please help us in helping you.Terms and Condition apply. </i></p><br /><br />
                    <p><i><b>Regd.Office:</b>Online_Best Shop Pvt.Ltd,Door No N1/456,Hotel Crown Road,Nayapalli,Bhubaneswar,Odisha-754202,Phone No-9238591744</i></p>
                </div>
            </div>
        </div>
     </body>
    </html>



